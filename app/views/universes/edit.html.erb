          <div>
            <%= form.label :order_index, "Order", class: "block text-xs font-medium text-gray-400 mb-1" %>
            <%= form.number_field :order_index, value: @universe.beats.count + 1, class: "w-24 px-3 py-2 border border-gray-600 bg-[#252525] text-gray-100 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-green-600" %>
          </div>
          <div class="flex gap-2 justify-end">
            <button type="button" data-action="click->edit-toggle#toggleAdd" data-form-id="new-beat-form" class="px-3 py-1.5 bg-gray-600 hover:bg-gray-700 text-white text-sm rounded-lg transition-colors">Cancel</button>
            <button type="submit" class="px-3 py-1.5 bg-green-600 hover:bg-green-700 text-white text-sm rounded-lg transition-colors">Create</button>
          </div>
        </div>
      <% end %>
    </div>

    <% if @universe.beats.any? %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <% @universe.beats.order(:order_index, :created_at).each_with_index do |beat, index| %>
          <div class="bg-[#252525] rounded-lg p-4 border border-gray-600" id="beat-<%= beat.id %>">
            <!-- View Mode -->
            <div id="beat-view-<%= beat.id %>">
              <div class="flex items-start gap-3">
                <div class="flex-shrink-0">
                  <div class="w-8 h-8 bg-green-900/50 rounded-full flex items-center justify-center border border-green-700">
                    <span class="text-sm font-semibold text-green-400"><%= index + 1 %></span>
                  </div>
                </div>
                <div class="flex-1 min-w-0">
                  <div class="flex items-start justify-between">
                    <h4 class="font-medium text-gray-100 mb-1 truncate"><%= beat.title %></h4>
                    <div class="flex gap-1 ml-2 flex-shrink-0">
                      <button type="button" data-action="click->edit-toggle#toggleEdit" data-type="beat" data-id="<%= beat.id %>" class="edit-toggle-btn p-1 text-gray-400 hover:text-green-400 hover:bg-gray-700 rounded transition-colors" title="Edit">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                      </button>
                      <%= button_to universe_beat_path(@universe, beat), method: :delete, data: { turbo_confirm: "Delete this beat?" }, class: "p-1 text-gray-400 hover:text-red-400 hover:bg-gray-700 rounded transition-colors", title: "Delete" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                      <% end %>
                    </div>
                  </div>
                  <p class="text-sm text-gray-400 line-clamp-3"><%= beat.description %></p>
                </div>
              </div>
            </div>

            <!-- Edit Mode (hidden by default) -->
            <div id="beat-edit-<%= beat.id %>" class="hidden">
              <%= form_with url: universe_beat_path(@universe, beat), method: :patch, scope: :beat, data: { turbo: false } do |form| %>
                <div class="grid gap-3">
                  <div>
                    <%= form.label :title, "Title", class: "block text-xs font-medium text-gray-400 mb-1" %>
                    <%= form.text_field :title, value: beat.title, class: "w-full px-3 py-2 border border-gray-600 bg-[#1a1a1a] text-gray-100 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-green-600", required: true %>
                  </div>
                  <div>
                    <%= form.label :description, "Description", class: "block text-xs font-medium text-gray-400 mb-1" %>
                    <%= form.text_area :description, value: beat.description, rows: 3, class: "w-full px-3 py-2 border border-gray-600 bg-[#1a1a1a] text-gray-100 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-green-600" %>
                  </div>
                  <div>
                    <%= form.label :order_index, "Order", class: "block text-xs font-medium text-gray-400 mb-1" %>
                    <%= form.number_field :order_index, value: beat.order_index, class: "w-24 px-3 py-2 border border-gray-600 bg-[#1a1a1a] text-gray-100 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-green-600" %>
                  </div>
                  <div class="flex gap-2 justify-end">
                    <button type="button" data-action="click->edit-toggle#toggleEdit" data-type="beat" data-id="<%= beat.id %>" class="edit-toggle-btn px-3 py-1.5 bg-gray-600 hover:bg-gray-700 text-white text-sm rounded-lg transition-colors">Cancel</button>
                    <button type="submit" class="px-3 py-1.5 bg-green-600 hover:bg-green-700 text-white text-sm rounded-lg transition-colors">Save</button>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-400 text-center py-4">No beats yet. Add your first story beat!</p>
    <% end %>
  </div>
</div>

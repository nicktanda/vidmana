                  <%= button_to universe_character_path(@universe, character), method: :delete, data: { turbo_confirm: "Delete this character?" }, class: "p-1.5 text-gray-400 hover:text-red-400 hover:bg-gray-700 rounded transition-colors", title: "Delete" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                  <% end %>
                </div>
              </div>
            </div>

            <!-- Edit Mode (hidden by default) -->

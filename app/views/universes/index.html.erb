<div class="flex flex-col w-full" style="height: 100vh;">
  <!-- Chat-like content area -->
  <div class="flex-1 overflow-y-auto" style="min-height: 0;">
    <div class="max-w-3xl mx-auto px-6 py-8 pb-4">
      <!-- Welcome Message is removed - clean interface like ChatGPT -->
      <% unless @user_prompt && @api_response %>
        <!-- Empty state - just show input at bottom -->
      <% end %>

      <!-- Conversation (if there's a response) -->
      <% if @user_prompt && @api_response %>
        <!-- User Message -->
        <div class="flex gap-4 mb-8">
          <div class="flex-shrink-0">
            <% if current_user.avatar_url.present? %>
              <img src="<%= current_user.avatar_url %>" alt="<%= current_user.name %>" class="w-10 h-10 rounded-lg">
            <% else %>
              <div class="w-10 h-10 bg-gray-700 rounded-lg flex items-center justify-center">
                <span class="text-white text-sm font-medium">
                  <%= current_user.name.first.upcase %>
                </span>
              </div>
            <% end %>
          </div>
          <div class="flex-1">
            <div class="bg-[#2f2f2f] rounded-lg p-4 border border-gray-600">
              <p class="text-gray-100"><%= @user_prompt %></p>
            </div>
          </div>
        </div>

        <!-- Assistant Response -->
        <div class="flex gap-4 mb-8">
          <div class="flex-shrink-0">
            <div class="w-10 h-10 bg-purple-600 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"/>
              </svg>
            </div>
          </div>
          <div class="flex-1 space-y-4">
            <div class="bg-[#2f2f2f] rounded-lg p-6 border border-gray-600">
              <p class="text-gray-100 mb-4">
                I've created a comprehensive universe for you! Here's what I've generated:
              </p>

              <!-- Title -->
              <div class="bg-gradient-to-r from-purple-900/50 to-blue-900/50 p-4 rounded-lg border border-purple-600 mb-4">
                <h3 class="text-2xl font-bold text-white mb-2"><%= @api_response['title'] %></h3>
                <p class="text-gray-200"><%= @api_response['description'] %></p>
              </div>

              <!-- Characters -->
              <% if @api_response['characters'].present? %>
                <div class="bg-[#252525] rounded-lg p-4 border border-gray-600 mb-4">
                  <h4 class="font-semibold text-white mb-3 flex items-center gap-2">
                    <svg class="w-5 h-5 text-purple-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                    </svg>
                    Characters
                  </h4>
                  <div class="space-y-3">
                    <% @api_response['characters'].each do |character| %>
                      <div class="pl-4 border-l-2 border-purple-600">
                        <p class="font-medium text-white"><%= character['name'] %></p>
                        <p class="text-sm text-gray-400"><%= character['description'] %></p>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>

              <!-- Locations -->
              <% if @api_response['locations'].present? %>
                <div class="bg-[#252525] rounded-lg p-4 border border-gray-600 mb-4">
                  <h4 class="font-semibold text-white mb-3 flex items-center gap-2">
                    <svg class="w-5 h-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                    </svg>
                    Locations
                  </h4>
                  <div class="space-y-3">
                    <% @api_response['locations'].each do |location| %>
                      <div class="pl-4 border-l-2 border-blue-600">
                        <p class="font-medium text-white"><%= location['name'] %></p>
                        <p class="text-sm text-gray-400"><%= location['description'] %></p>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>

              <!-- Beats -->
              <% if @api_response['beats'].present? %>
                <div class="bg-[#252525] rounded-lg p-4 border border-gray-600">
                  <h4 class="font-semibold text-white mb-3 flex items-center gap-2">
                    <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.293l-3-3a1 1 0 00-1.414 1.414L10.586 9.5H7a1 1 0 100 2h3.586l-1.293 1.293a1 1 0 101.414 1.414l3-3a1 1 0 000-1.414z" clip-rule="evenodd"/>
                    </svg>
                    Story Beats
                  </h4>
                  <div class="space-y-3">
                    <% @api_response['beats'].each_with_index do |beat, index| %>
                      <div class="flex gap-3">
                        <div class="flex-shrink-0">
                          <div class="w-8 h-8 bg-green-900/50 rounded-full flex items-center justify-center border border-green-700">
                            <span class="text-sm font-semibold text-green-400"><%= index + 1 %></span>
                          </div>
                        </div>
                        <div class="flex-1">
                          <p class="font-medium text-white"><%= beat['title'] %></p>
                          <p class="text-sm text-gray-400 mt-1"><%= beat['description'] %></p>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>

              <!-- Action Buttons -->
              <div class="flex justify-end gap-3 mt-6">
                <%= link_to "Start New", authenticated_root_path, class: "px-4 py-2 text-gray-300 bg-gray-700 rounded-lg hover:bg-gray-600 transition-colors" %>
                <%= form_with url: universes_path, method: :post, local: true, class: "inline-block" do |form| %>
                  <%= form.hidden_field :name, value: @api_response['title'] %>
                  <%= form.hidden_field :full_data, value: @api_response.to_json %>
                  <%= form.hidden_field :save_universe, value: true %>
                  <%= form.submit "Save Universe", class: "px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors cursor-pointer" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Input Area (ChatGPT-style) - Fixed at bottom -->
  <div class="flex-shrink-0 border-t border-gray-700 px-6 py-4 bg-[#212121]">
    <div class="max-w-3xl mx-auto">
      <%= form_with model: @universe, url: universes_path, method: :post, local: true, data: { turbo: false } do |form| %>
        <div class="flex items-center justify-between mb-3">
          <label for="model-select" class="text-sm font-medium text-gray-300">Model</label>
          <%= form.select :model,
              options_for_select([
                ['Grok 3 Mini', 'x-ai/grok-3-mini'],
                ['Qwen 2.5', 'qwen/qwen-2.5-72b-instruct'],
                ['Qwen 3 Coder', 'qwen/qwen3-coder']
              ], @selected_model || @default_model),
              {},
              id: 'model-select',
              class: 'px-3 py-2 border border-gray-600 rounded-lg bg-[#2f2f2f] text-gray-100 text-sm focus:outline-none focus:ring-2 focus:ring-purple-600' %>
        </div>
        <div class="relative">
          <%= form.text_area :prompt,
              placeholder: "Describe your universe...",
              class: "w-full px-4 py-3 pr-12 border border-gray-600 bg-[#2f2f2f] text-gray-100 rounded-lg resize-none focus:outline-none focus:ring-2 focus:ring-purple-600 placeholder-gray-400",
              rows: 3 %>

          <button
            type="submit"
            class="absolute bottom-3 right-3 bg-purple-600 hover:bg-purple-700 text-white rounded-lg p-2 transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
            </svg>
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="max-w-5xl mx-auto px-6 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between mb-4">
      <h1 class="text-3xl font-bold text-white"><%= @universe.name %></h1>
      <div class="flex gap-2">
        <%= link_to edit_universe_path(@universe), class: "px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-lg transition-colors" do %>
          <svg class="w-5 h-5 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          Edit
        <% end %>
        <%= button_to universe_path(@universe), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition-colors" do %>
          <svg class="w-5 h-5 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
          </svg>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
    <div class="bg-[#2f2f2f] rounded-lg p-4 border border-gray-600">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-300 text-sm">Chapters</p>
          <p class="text-2xl font-bold text-white"><%= @universe.chapters.count %></p>
        </div>
        <svg class="w-8 h-8 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
        </svg>
      </div>
    </div>

    <div class="bg-[#2f2f2f] rounded-lg p-4 border border-gray-600">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-300 text-sm">Characters</p>
          <p class="text-2xl font-bold text-white"><%= @universe.characters.count %></p>
        </div>
        <svg class="w-8 h-8 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
      </div>
    </div>

    <div class="bg-[#2f2f2f] rounded-lg p-4 border border-gray-600">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-300 text-sm">Locations</p>
          <p class="text-2xl font-bold text-white"><%= @universe.locations.count %></p>
        </div>
        <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
      </div>
    </div>
  </div>

  <!-- Characters Section -->
  <% if @universe.characters.any? %>
    <div class="bg-[#2f2f2f] rounded-lg p-6 border border-gray-600 mb-6">
      <h2 class="text-xl font-semibold text-white mb-4 flex items-center gap-2">
        <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
        Characters
      </h2>
      <div class="grid gap-4">
        <% @universe.characters.each do |character| %>
          <div class="bg-[#252525] rounded-lg p-4 border border-gray-600">
            <h3 class="font-medium text-white mb-2"><%= character.name %></h3>
            <p class="text-sm text-gray-400"><%= character.description %></p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Locations Section -->
  <% if @universe.locations.any? %>
    <div class="bg-[#2f2f2f] rounded-lg p-6 border border-gray-600 mb-6">
      <h2 class="text-xl font-semibold text-white mb-4 flex items-center gap-2">
        <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        Locations
      </h2>
      <div class="grid gap-4">
        <% @universe.locations.each do |location| %>
          <div class="bg-[#252525] rounded-lg p-4 border border-gray-600">
            <h3 class="font-medium text-white mb-2"><%= location.name %></h3>
            <p class="text-sm text-gray-400"><%= location.description %></p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Chapters Section -->
  <div class="bg-[#2f2f2f] rounded-lg p-6 border border-gray-600">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-semibold text-white flex items-center gap-2">
        <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
        </svg>
        Chapters
      </h2>
      <%= link_to new_universe_chapter_path(@universe), class: "px-3 py-1 bg-purple-600 hover:bg-purple-700 text-white rounded-lg text-sm transition-colors" do %>
        + Add Chapter
      <% end %>
    </div>

    <% if @universe.chapters.any? %>
      <div class="space-y-3">
        <% @universe.chapters.each do |chapter| %>
          <%= link_to universe_chapter_path(@universe, chapter), class: "block bg-[#252525] hover:bg-[#2a2a2a] rounded-lg p-4 border border-gray-600 transition-colors group" do %>
            <div class="flex items-center justify-between">
              <div>
                <h3 class="font-medium text-white group-hover:text-purple-400 transition-colors"><%= chapter.name %></h3>
                <p class="text-sm text-gray-300 mt-1"><%= pluralize(chapter.scenes.count, 'scene') %></p>
              </div>
              <svg class="w-5 h-5 text-gray-500 group-hover:text-purple-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-300 text-center py-8">No chapters yet. Add your first chapter to get started!</p>
    <% end %>
  </div>
</div>

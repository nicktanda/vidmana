<div class="max-w-5xl mx-auto px-6 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between mb-4">
      <h1 class="text-3xl font-bold text-gray-900"><%= @universe.name %></h1>
      <div class="flex gap-2">
        <%= link_to authenticated_root_path, class: "px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white rounded-lg transition-colors flex items-center" do %>
          <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Back to Home
        <% end %>
        <% if @universe.can_edit?(current_user) %>
          <%= link_to edit_universe_path(@universe), class: "px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg transition-colors flex items-center" do %>
            <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            Edit
          <% end %>
        <% end %>
        <% if @universe.user_id == current_user.id %>
          <%= button_to universe_path(@universe), method: :delete, data: { turbo_confirm: 'Are you sure?' }, form_class: "inline-block", class: "px-4 py-2 bg-red-500 hover:bg-red-700 text-white rounded-lg transition-colors flex items-center cursor-pointer" do %>
            <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            <span>Delete</span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Sharing Status (for shared universes) -->
  <% if @universe.user_id != current_user.id && @universe.permission_for(current_user) %>
    <div class="bg-blue-900/20 border border-blue-700 rounded-lg p-4 mb-6">
      <div class="flex items-center gap-2 text-sm text-blue-200">
        <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <span>Shared by <strong><%= @universe.user.name %></strong> â€¢ You have <strong><%= @universe.permission_for(current_user) %></strong> access</span>
      </div>
    </div>
  <% end %>

  <!-- Beats Section - Horizontal Row with Expandable Detail -->
  <% if @universe.beats.any? %>
    <div class="bg-[#2f2f2f] rounded-lg p-6 border border-gray-600 mb-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
        <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
        </svg>
        Story Beats
      </h2>
      <div class="flex gap-4 overflow-x-auto pb-2 scrollbar-thin scrollbar-thumb-gray-600 scrollbar-track-transparent">
        <% @universe.beats.order(:order_index, :created_at).each_with_index do |beat, index| %>
          <div class="flex-shrink-0 w-64 bg-[#252525] rounded-lg border border-gray-600 p-4 cursor-pointer hover:border-green-600 transition-colors beat-card group"
               data-beat-title="<%= h beat.title %>"
               data-beat-description="<%= h beat.description %>"
               data-beat-index="<%= index + 1 %>">
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-green-900/50 rounded-full flex items-center justify-center border border-green-700">
                  <span class="text-sm font-semibold text-green-400"><%= index + 1 %></span>
                </div>
              </div>
              <div class="flex-1 min-w-0">
                <h4 class="font-medium text-gray-100 mb-1"><%= beat.title %></h4>
                <p class="text-sm text-gray-400 line-clamp-4"><%= beat.description %></p>
              </div>
            </div>
            <p class="mt-2 text-xs text-gray-500 group-hover:text-green-400 transition-colors">Read more...</p>
          </div>
        <% end %>
      </div>

      <!-- Beat Detail Panel -->
      <div id="beat-detail" class="hidden mt-4 p-4 bg-[#252525] rounded-lg border border-green-600">
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0">
            <div class="w-10 h-10 bg-green-900/50 rounded-full flex items-center justify-center border border-green-700">
              <span id="beat-detail-index" class="text-lg font-semibold text-green-400"></span>
            </div>
          </div>
          <div class="flex-1">
            <div class="flex items-start justify-between mb-2">
              <h3 id="beat-detail-title" class="text-lg font-semibold text-gray-100"></h3>
              <button type="button" id="close-beat-detail" class="p-1 text-gray-400 hover:text-white hover:bg-gray-700 rounded transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
              </button>
            </div>
            <p id="beat-detail-description" class="text-gray-300 leading-relaxed whitespace-pre-wrap"></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Characters Section - Horizontal Slider with Expandable Detail -->
  <% if @universe.characters.any? %>
    <div class="bg-[#2f2f2f] rounded-lg p-6 border border-gray-600 mb-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
        <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
        Characters
      </h2>
      <div class="flex gap-4 overflow-x-auto pb-2 scrollbar-thin scrollbar-thumb-gray-600 scrollbar-track-transparent">
        <% @universe.characters.each do |character| %>
          <div class="flex-shrink-0 w-64 bg-[#252525] rounded-lg p-4 border border-gray-600 cursor-pointer hover:border-purple-600 transition-colors character-card group"
               data-name="<%= h character.name %>"
               data-role="<%= h character.role %>"
               data-description="<%= h character.description %>">
            <h3 class="font-medium text-gray-100 mb-1"><%= character.name %></h3>
            <% if character.role.present? %>
              <span class="inline-block px-2 py-0.5 bg-purple-900/50 text-purple-300 text-xs rounded mb-2"><%= character.role %></span>
            <% end %>
            <p class="text-sm text-gray-400 line-clamp-4"><%= character.description %></p>
            <p class="mt-2 text-xs text-gray-500 group-hover:text-purple-400 transition-colors">Read more...</p>
          </div>
        <% end %>
      </div>

      <!-- Character Detail Panel -->
      <div id="character-detail" class="hidden mt-4 p-4 bg-[#252525] rounded-lg border border-purple-600">
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0">
            <div class="w-10 h-10 bg-purple-900/50 rounded-full flex items-center justify-center border border-purple-700">
              <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
          </div>
          <div class="flex-1">
            <div class="flex items-start justify-between mb-2">
              <div>
                <h3 id="character-detail-name" class="text-lg font-semibold text-gray-100"></h3>
                <span id="character-detail-role" class="inline-block px-2 py-0.5 bg-purple-900/50 text-purple-300 text-xs rounded mt-1"></span>
              </div>
              <button type="button" id="close-character-detail" class="p-1 text-gray-400 hover:text-white hover:bg-gray-700 rounded transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
              </button>
            </div>
            <p id="character-detail-description" class="text-gray-300 leading-relaxed whitespace-pre-wrap"></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Locations Section - Horizontal Slider with Expandable Detail -->
  <% if @universe.locations.any? %>
    <div class="bg-[#2f2f2f] rounded-lg p-6 border border-gray-600 mb-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
        <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        Locations
      </h2>
      <div class="flex gap-4 overflow-x-auto pb-2 scrollbar-thin scrollbar-thumb-gray-600 scrollbar-track-transparent">
        <% @universe.locations.each do |location| %>
          <div class="flex-shrink-0 w-64 bg-[#252525] rounded-lg p-4 border border-gray-600 cursor-pointer hover:border-blue-600 transition-colors location-card group"
               data-name="<%= h location.name %>"
               data-type="<%= h location.location_type %>"
               data-description="<%= h location.description %>">
            <h3 class="font-medium text-gray-100 mb-1"><%= location.name %></h3>
            <% if location.location_type.present? %>
              <span class="inline-block px-2 py-0.5 bg-blue-900/50 text-blue-300 text-xs rounded mb-2"><%= location.location_type %></span>
            <% end %>
            <p class="text-sm text-gray-400 line-clamp-4"><%= location.description %></p>
            <p class="mt-2 text-xs text-gray-500 group-hover:text-blue-400 transition-colors">Read more...</p>
          </div>
        <% end %>
      </div>

      <!-- Location Detail Panel -->
      <div id="location-detail" class="hidden mt-4 p-4 bg-[#252525] rounded-lg border border-blue-600">
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0">
            <div class="w-10 h-10 bg-blue-900/50 rounded-full flex items-center justify-center border border-blue-700">
              <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
          </div>
          <div class="flex-1">
            <div class="flex items-start justify-between mb-2">
              <div>
                <h3 id="location-detail-name" class="text-lg font-semibold text-gray-100"></h3>
                <span id="location-detail-type" class="inline-block px-2 py-0.5 bg-blue-900/50 text-blue-300 text-xs rounded mt-1"></span>
              </div>
              <button type="button" id="close-location-detail" class="p-1 text-gray-400 hover:text-white hover:bg-gray-700 rounded transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
              </button>
            </div>
            <p id="location-detail-description" class="text-gray-300 leading-relaxed whitespace-pre-wrap"></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Sharing Section (only visible to owner) -->
  <% if @universe.user_id == current_user.id %>
    <div class="bg-[#2f2f2f] rounded-lg p-6 border border-gray-600 mb-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
        <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
        </svg>
        Sharing
      </h2>

      <!-- Add New Share Form -->
      <% if @available_users.any? %>
        <div class="mb-6">
          <%= form_with url: universe_universe_shares_path(@universe), method: :post, local: true, class: "flex gap-3" do |f| %>
            <select name="user_id" required class="flex-1 px-4 py-2 border border-gray-600 bg-[#252525] text-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-600">
              <option value="">Select a user...</option>
              <% @available_users.each do |user| %>
                <option value="<%= user.id %>"><%= user.name %> (<%= user.email %>)</option>
              <% end %>
            </select>
            <select name="permission_level" class="px-4 py-2 border border-gray-600 bg-[#252525] text-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-600">
              <option value="view">Can View</option>
              <option value="edit">Can Edit</option>
            </select>
            <button type="submit" class="px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg transition-colors">
              Share
            </button>
          <% end %>
        </div>
      <% else %>
        <div class="mb-6">
          <p class="text-sm text-gray-400 text-center py-3 bg-[#252525] rounded-lg border border-gray-600">
            No more users available to share with.
          </p>
        </div>
      <% end %>

      <!-- Current Shares List -->
      <% if @universe.universe_shares.any? %>
        <div class="space-y-3">
          <p class="text-sm text-gray-400 mb-3">People with access:</p>
          <% @universe.universe_shares.each do |share| %>
            <div class="flex items-center justify-between bg-[#252525] rounded-lg p-4 border border-gray-600">
              <div class="flex items-center gap-3">
                <% if share.user.avatar_url.present? %>
                  <img src="<%= share.user.avatar_url %>" alt="<%= share.user.name %>" class="h-8 w-8 rounded-full">
                <% else %>
                  <div class="h-8 w-8 rounded-full bg-purple-600 flex items-center justify-center">
                    <span class="text-white text-sm font-medium">
                      <%= share.user.name.first.upcase %>
                    </span>
                  </div>
                <% end %>
                <div>
                  <p class="text-sm font-medium text-gray-200"><%= share.user.name %></p>
                  <p class="text-xs text-gray-400"><%= share.user.email %></p>
                </div>
              </div>
              <div class="flex items-center gap-2">
                <%= form_with url: universe_universe_share_path(@universe, share), method: :patch, local: true, class: "inline" do |f| %>
                  <select name="permission_level" onchange="this.form.submit()" class="px-3 py-1 text-sm border border-gray-600 bg-[#252525] text-gray-100 rounded focus:outline-none focus:ring-2 focus:ring-purple-600">
                    <option value="view" <%= 'selected' if share.permission_level == 'view' %>>Can View</option>
                    <option value="edit" <%= 'selected' if share.permission_level == 'edit' %>>Can Edit</option>
                  </select>
                <% end %>
                <%= button_to universe_universe_share_path(@universe, share), method: :delete,
                              data: { turbo_confirm: 'Remove access for this user?' },
                              class: "text-red-400 hover:text-red-300 ml-2" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                  </svg>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-sm text-gray-400 text-center py-4">Not shared with anyone yet.</p>
      <% end %>
    </div>
  <% end %>

  <!-- User Input Section -->
  <div class="bg-[#2f2f2f] rounded-lg p-6 border border-gray-600">
    <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
      <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
      </svg>
      Continue Your Story
    </h2>
    <p class="text-gray-400 text-sm mb-4">Add more to your universe or ask questions about it.</p>
    <%= render 'universes/prompt_input' %>
  </div>
</div>

<script>
  function initDetailPanels() {
    // Beat detail panel
    const beatDetail = document.getElementById('beat-detail');
    if (beatDetail) {
      document.querySelectorAll('.beat-card').forEach(card => {
        card.addEventListener('click', function() {
          document.getElementById('beat-detail-title').textContent = this.dataset.beatTitle;
          document.getElementById('beat-detail-description').textContent = this.dataset.beatDescription;
          document.getElementById('beat-detail-index').textContent = this.dataset.beatIndex;
          beatDetail.classList.remove('hidden');
        });
      });

      document.getElementById('close-beat-detail')?.addEventListener('click', function() {
        beatDetail.classList.add('hidden');
      });
    }

    // Character detail panel
    const characterDetail = document.getElementById('character-detail');
    if (characterDetail) {
      document.querySelectorAll('.character-card').forEach(card => {
        card.addEventListener('click', function() {
          document.getElementById('character-detail-name').textContent = this.dataset.name;
          document.getElementById('character-detail-description').textContent = this.dataset.description;
          const roleEl = document.getElementById('character-detail-role');
          if (this.dataset.role) {
            roleEl.textContent = this.dataset.role;
            roleEl.classList.remove('hidden');
          } else {
            roleEl.classList.add('hidden');
          }
          characterDetail.classList.remove('hidden');
        });
      });

      document.getElementById('close-character-detail')?.addEventListener('click', function() {
        characterDetail.classList.add('hidden');
      });
    }

    // Location detail panel
    const locationDetail = document.getElementById('location-detail');
    if (locationDetail) {
      document.querySelectorAll('.location-card').forEach(card => {
        card.addEventListener('click', function() {
          document.getElementById('location-detail-name').textContent = this.dataset.name;
          document.getElementById('location-detail-description').textContent = this.dataset.description;
          const typeEl = document.getElementById('location-detail-type');
          if (this.dataset.type) {
            typeEl.textContent = this.dataset.type;
            typeEl.classList.remove('hidden');
          } else {
            typeEl.classList.add('hidden');
          }
          locationDetail.classList.remove('hidden');
        });
      });

      document.getElementById('close-location-detail')?.addEventListener('click', function() {
        locationDetail.classList.add('hidden');
      });
    }
  }

  document.addEventListener('DOMContentLoaded', initDetailPanels);
  document.addEventListener('turbo:load', initDetailPanels);
</script>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-4 {
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .scrollbar-thin::-webkit-scrollbar {
    height: 6px;
  }

  .scrollbar-thin::-webkit-scrollbar-track {
    background: transparent;
  }

  .scrollbar-thin::-webkit-scrollbar-thumb {
    background-color: #4b5563;
    border-radius: 3px;
  }

  .scrollbar-thin::-webkit-scrollbar-thumb:hover {
    background-color: #6b7280;
  }
</style>

<div class="max-w-5xl mx-auto px-6 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between mb-4">
      <h1 class="text-3xl font-bold text-gray-900"><%= @universe.name %></h1>
      <div class="flex gap-2">
        <%= link_to authenticated_root_path, class: "px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white rounded-lg transition-colors flex items-center" do %>
          <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Back to Home
        <% end %>
        <% if @universe.can_edit?(current_user) %>
          <%= link_to edit_universe_path(@universe), class: "px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg transition-colors flex items-center" do %>
            <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            Edit
          <% end %>
        <% end %>
        <% if @universe.user_id == current_user.id %>
          <%= button_to universe_path(@universe), method: :delete, data: { turbo_confirm: 'Are you sure?' }, form_class: "inline-block", class: "px-4 py-2 bg-red-500 hover:bg-red-700 text-white rounded-lg transition-colors flex items-center cursor-pointer" do %>
            <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            <span>Delete</span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Original Prompt Section -->
  <% if @universe.prompt.present? %>
    <div class="bg-[#2f2f2f] rounded-lg p-6 border border-gray-600 mb-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Original Prompt</h2>
      <p class="text-gray-300 leading-relaxed"><%= @universe.prompt %></p>
    </div>
  <% end %>

  <!-- Sharing Section (only visible to owner) -->
  <% if @universe.user_id == current_user.id %>
    <div class="bg-[#2f2f2f] rounded-lg p-6 border border-gray-600 mb-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
        <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
        </svg>
        Sharing
      </h2>

      <!-- Add New Share Form -->
      <% if @available_users.any? %>
        <div class="mb-6">
          <%= form_with url: universe_universe_shares_path(@universe), method: :post, local: true, class: "flex gap-3" do |f| %>
            <select name="user_id" required class="flex-1 px-4 py-2 border border-gray-600 bg-[#252525] text-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-600">
              <option value="">Select a user...</option>
              <% @available_users.each do |user| %>
                <option value="<%= user.id %>"><%= user.name %> (<%= user.email %>)</option>
              <% end %>
            </select>
            <select name="permission_level" class="px-4 py-2 border border-gray-600 bg-[#252525] text-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-600">
              <option value="view">Can View</option>
              <option value="edit">Can Edit</option>
            </select>
            <button type="submit" class="px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg transition-colors">
              Share
            </button>
          <% end %>
        </div>
      <% else %>
        <div class="mb-6">
          <p class="text-sm text-gray-400 text-center py-3 bg-[#252525] rounded-lg border border-gray-600">
            No more users available to share with.
          </p>
        </div>
      <% end %>

      <!-- Current Shares List -->
      <% if @universe.universe_shares.any? %>
        <div class="space-y-3">
          <p class="text-sm text-gray-400 mb-3">People with access:</p>
          <% @universe.universe_shares.each do |share| %>
            <div class="flex items-center justify-between bg-[#252525] rounded-lg p-4 border border-gray-600">
              <div class="flex items-center gap-3">
                <% if share.user.avatar_url.present? %>
                  <img src="<%= share.user.avatar_url %>" alt="<%= share.user.name %>" class="h-8 w-8 rounded-full">
                <% else %>
                  <div class="h-8 w-8 rounded-full bg-purple-600 flex items-center justify-center">
                    <span class="text-white text-sm font-medium">
                      <%= share.user.name.first.upcase %>
                    </span>
                  </div>
                <% end %>
                <div>
                  <p class="text-sm font-medium text-gray-200"><%= share.user.name %></p>
                  <p class="text-xs text-gray-400"><%= share.user.email %></p>
                </div>
              </div>
              <div class="flex items-center gap-2">
                <%= form_with url: universe_universe_share_path(@universe, share), method: :patch, local: true, class: "inline" do |f| %>
                  <select name="permission_level" onchange="this.form.submit()" class="px-3 py-1 text-sm border border-gray-600 bg-[#252525] text-gray-100 rounded focus:outline-none focus:ring-2 focus:ring-purple-600">
                    <option value="view" <%= 'selected' if share.permission_level == 'view' %>>Can View</option>
                    <option value="edit" <%= 'selected' if share.permission_level == 'edit' %>>Can Edit</option>
                  </select>
                <% end %>
                <%= button_to universe_universe_share_path(@universe, share), method: :delete,
                              data: { turbo_confirm: 'Remove access for this user?' },
                              class: "text-red-400 hover:text-red-300 ml-2" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                  </svg>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-sm text-gray-400 text-center py-4">Not shared with anyone yet.</p>
      <% end %>
    </div>
  <% elsif @universe.permission_for(current_user) %>
    <!-- Sharing status for non-owners -->
    <div class="bg-[#2f2f2f] rounded-lg p-4 border border-gray-600 mb-6">
      <div class="flex items-center gap-2 text-sm text-gray-300">
        <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <span>Shared by <strong><%= @universe.user.name %></strong> â€¢ You have <strong><%= @universe.permission_for(current_user) %></strong> access</span>
      </div>
    </div>
  <% end %>

  <!-- Characters Section -->
  <% if @universe.characters.any? %>
    <div class="bg-[#2f2f2f] rounded-lg p-6 border border-gray-600 mb-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
        <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
        Characters
      </h2>
      <div class="grid gap-4">
        <% @universe.characters.each do |character| %>
          <div class="bg-[#252525] rounded-lg p-4 border border-gray-600">
            <h3 class="font-medium text-gray-900 mb-2"><%= character.name %></h3>
            <p class="text-sm text-gray-400"><%= character.description %></p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Locations Section -->
  <% if @universe.locations.any? %>
    <div class="bg-[#2f2f2f] rounded-lg p-6 border border-gray-600 mb-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
        <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        Locations
      </h2>
      <div class="grid gap-4">
        <% @universe.locations.each do |location| %>
          <div class="bg-[#252525] rounded-lg p-4 border border-gray-600">
            <h3 class="font-medium text-gray-900 mb-2"><%= location.name %></h3>
            <p class="text-sm text-gray-400"><%= location.description %></p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Chapters Section -->
  <div class="bg-[#2f2f2f] rounded-lg p-6 border border-gray-600">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-semibold text-gray-900 flex items-center gap-2">
        <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
        </svg>
        Story Structure
      </h2>
    </div>

    <% if @universe.chapters.any? %>
      <div class="space-y-4">
        <% @universe.chapters.each do |chapter| %>
          <div class="border-l-2 border-green-600 pl-4">
            <h5 class="font-semibold text-gray-900 mb-2"><%= chapter.name %></h5>
            <% if chapter.description.present? %>
              <p class="text-sm text-gray-400 mb-3"><%= chapter.description %></p>
            <% end %>

            <% chapter.scenes.each do |scene| %>
              <div class="ml-4 mb-3">
                <p class="text-sm font-medium text-purple-400 mb-2"><%= scene.name %></p>

                <% if scene.description.present? %>
                  <p class="text-sm text-gray-300 mt-2 mb-3 leading-relaxed"><%= scene.description %></p>
                <% end %>

                <% if scene.beats.any? %>
                  <% scene.beats.each_with_index do |beat, beat_index| %>
                    <div class="flex gap-2 mb-2 ml-4">
                      <div class="flex-shrink-0">
                        <div class="w-6 h-6 bg-green-900/50 rounded-full flex items-center justify-center border border-green-700">
                          <span class="text-xs font-semibold text-green-400"><%= beat_index + 1 %></span>
                        </div>
                      </div>
                      <div class="flex-1">
                        <p class="text-sm font-medium text-white"><%= beat.title %></p>
                        <p class="text-xs text-gray-400 mt-1"><%= beat.description&.truncate(200) %></p>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-300 text-center py-8">No chapters yet. Add your first chapter to get started!</p>
    <% end %>
  </div>
</div>

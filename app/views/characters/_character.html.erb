<%= turbo_frame_tag dom_id(character) do %>
  <div class="bg-[#252525] rounded-lg p-4 border border-gray-600">
    <div class="flex items-start justify-between">
      <div class="flex-1">
        <h3 class="font-medium text-gray-100 mb-1"><%= character.name %></h3>
        <% if character.role.present? %>
          <span class="inline-block px-2 py-0.5 bg-purple-900/50 text-purple-300 text-xs rounded mb-2"><%= character.role %></span>
        <% end %>
        <p class="text-sm text-gray-400"><%= character.description %></p>
      </div>
      <div class="flex gap-1 ml-3">
        <%= link_to edit_universe_character_path(character.universe, character), class: "p-1.5 text-gray-400 hover:text-purple-400 hover:bg-gray-700 rounded transition-colors", title: "Edit", data: { turbo_frame: dom_id(character) } do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
        <% end %>
        <%= button_to universe_character_path(character.universe, character), method: :delete, data: { turbo_confirm: "Delete this character?" }, class: "p-1.5 text-gray-400 hover:text-red-400 hover:bg-gray-700 rounded transition-colors", title: "Delete" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
          </svg>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

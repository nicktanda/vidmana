<%= turbo_frame_tag dom_id(character) do %>
  <div class="bg-[#252525] rounded-lg p-4 border border-purple-600">
    <%= form_with model: [character.universe, character], class: "space-y-3" do |form| %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
        <div>
          <%= form.label :name, "Name", class: "block text-xs font-medium text-gray-400 mb-1" %>
          <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-600 bg-[#1a1a1a] text-gray-100 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-purple-600", required: true %>
        </div>
        <div>
          <%= form.label :role, "Role", class: "block text-xs font-medium text-gray-400 mb-1" %>
          <%= form.text_field :role, class: "w-full px-3 py-2 border border-gray-600 bg-[#1a1a1a] text-gray-100 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-purple-600" %>
        </div>
      </div>
      <div>
        <%= form.label :description, "Description", class: "block text-xs font-medium text-gray-400 mb-1" %>
        <%= form.text_area :description, rows: 3, class: "w-full px-3 py-2 border border-gray-600 bg-[#1a1a1a] text-gray-100 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-purple-600" %>
      </div>
      <div class="flex gap-2 justify-end">
        <%= link_to "Cancel", edit_universe_path(character.universe), class: "px-3 py-1.5 bg-gray-600 hover:bg-gray-700 text-white text-sm rounded-lg transition-colors", data: { turbo_frame: dom_id(character) } %>
        <%= form.submit "Save", class: "px-3 py-1.5 bg-purple-600 hover:bg-purple-700 text-white text-sm rounded-lg transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
<% end %>

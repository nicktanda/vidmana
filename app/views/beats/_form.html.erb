<%= turbo_frame_tag dom_id(beat) do %>
  <div class="bg-[#252525] rounded-lg p-4 border border-green-600">
    <%= form_with model: [beat.universe, beat], class: "space-y-3" do |form| %>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-3">
        <div>
          <%= form.label :order_index, "Order", class: "block text-xs font-medium text-gray-400 mb-1" %>
          <%= form.number_field :order_index, class: "w-full px-3 py-2 border border-gray-600 bg-[#1a1a1a] text-gray-100 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-green-600" %>
        </div>
        <div class="md:col-span-3">
          <%= form.label :title, "Title", class: "block text-xs font-medium text-gray-400 mb-1" %>
          <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-600 bg-[#1a1a1a] text-gray-100 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-green-600", required: true %>
        </div>
      </div>
      <div>
        <%= form.label :description, "Description", class: "block text-xs font-medium text-gray-400 mb-1" %>
        <%= form.text_area :description, rows: 3, class: "w-full px-3 py-2 border border-gray-600 bg-[#1a1a1a] text-gray-100 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-green-600" %>
      </div>
      <div class="flex gap-2 justify-end">
        <%= link_to "Cancel", edit_universe_path(beat.universe), class: "px-3 py-1.5 bg-gray-600 hover:bg-gray-700 text-white text-sm rounded-lg transition-colors", data: { turbo_frame: dom_id(beat) } %>
        <%= form.submit "Save", class: "px-3 py-1.5 bg-green-600 hover:bg-green-700 text-white text-sm rounded-lg transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
<% end %>

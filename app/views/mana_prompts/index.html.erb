<div class="max-w-5xl mx-auto px-6 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between mb-4">
      <h1 class="text-3xl font-bold text-gray-900">ManaPrompt</h1>
      <div class="flex gap-2">
        <%= link_to authenticated_root_path, class: "px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white rounded-lg transition-colors flex items-center" do %>
          <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Back to Home
        <% end %>
        <%= link_to edit_mana_prompts_path, class: "px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg transition-colors flex items-center" do %>
          <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          Edit Prompt
        <% end %>
      </div>
    </div>
    <p class="text-gray-400">This is the AI prompt template used to generate all your universes</p>
  </div>

  <!-- Current Prompt -->
  <div class="bg-[#2f2f2f] rounded-lg p-6 border border-gray-600">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Current Prompt Template</h2>
    <div class="bg-[#252525] rounded-lg p-4 border border-gray-600">
      <pre class="text-gray-300 whitespace-pre-wrap font-mono text-sm leading-relaxed"><%= @mana_prompt.content %></pre>
    </div>
  </div>
</div>

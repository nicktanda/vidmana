<div class="min-h-screen bg-gradient-to-br from-purple-900 via-blue-900 to-indigo-900">
  <!-- Hero Section -->
  <div class="relative overflow-hidden">
    <!-- Background pattern -->
    <div class="absolute inset-0 bg-black/20"></div>
    <div class="absolute inset-0 bg-gradient-to-r from-purple-600/20 to-blue-600/20"></div>

    <!-- Animated background elements -->
    <div class="absolute top-20 left-10 w-72 h-72 bg-purple-500/10 rounded-full blur-xl animate-pulse"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-blue-500/10 rounded-full blur-xl animate-pulse delay-1000"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
      <div class="text-center">
        <!-- Logo/Brand -->
        <div class="mb-8">
          <h1 class="text-6xl md:text-8xl font-black text-transparent bg-clip-text bg-gradient-to-r from-purple-400 via-pink-400 to-blue-400 tracking-tight">
            Vidmana
          </h1>
          <p class="text-xl md:text-2xl text-gray-300 mt-4 max-w-3xl mx-auto">
            Transform your ideas into cinematic stories with AI-powered character definitions, locations, and narrative beats
          </p>
        </div>

        <% if user_signed_in? %>
          <!-- Logged in user content -->
          <div class="mb-12">
            <div class="inline-flex items-center px-6 py-3 bg-white/10 backdrop-blur-sm rounded-full text-white/90 mb-8">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
              </svg>
              Welcome back, <%= current_user.name || current_user.email.split('@').first %>
            </div>
          </div>

          <!-- Action buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center mb-16">
            <%= link_to new_story_path, class: "group relative px-8 py-4 bg-gradient-to-r from-purple-600 to-blue-600 text-white font-semibold rounded-xl shadow-lg transform transition-all duration-200 hover:scale-105 hover:shadow-xl" do %>
              <span class="relative z-10 flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                Create New Story
              </span>
              <div class="absolute inset-0 bg-gradient-to-r from-purple-700 to-blue-700 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity"></div>
            <% end %>

            <%= link_to stories_path, class: "px-8 py-4 bg-white/10 backdrop-blur-sm text-white font-semibold rounded-xl border border-white/20 hover:bg-white/20 transition-all duration-200" do %>
              <span class="flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                </svg>
                View All Stories
              </span>
            <% end %>
          </div>

        <% else %>
          <!-- Not logged in content -->
          <div class="mb-12">
            <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
              Join thousands of creators turning simple prompts into detailed cinematic narratives
            </p>
          </div>

          <!-- CTA buttons -->
          <div class="flex justify-center mb-16">
            <%= link_to new_user_session_path, class: "group relative px-10 py-5 bg-white text-gray-900 font-semibold rounded-xl shadow-2xl transform transition-all duration-200 hover:scale-105 hover:shadow-3xl flex items-center" do %>
              <svg class="w-6 h-6 mr-3" viewBox="0 0 24 24">
                <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
              </svg>
              <span class="text-lg">Get Started with Google</span>
              <div class="ml-3 text-xs text-gray-500">Sign in or Sign up</div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <% if user_signed_in? %>
    <!-- User Stories Section -->
    <div class="relative bg-black/20 backdrop-blur-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold text-white mb-4">Your Stories</h2>
          <p class="text-gray-300 text-lg">Your creative journey continues here</p>
        </div>

        <% if current_user.stories.any? %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% current_user.stories.order(created_at: :desc).limit(6).each do |story| %>
              <div class="group bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/10 hover:bg-white/20 transition-all duration-300 hover:scale-105">
                <div class="mb-4">
                  <h3 class="text-xl font-semibold text-white mb-2 line-clamp-2"><%= story.title %></h3>
                  <p class="text-gray-300 text-sm line-clamp-3">
                    <%= story.description.present? ? story.description : "No description available" %>
                  </p>
                </div>

                <div class="flex items-center justify-between text-sm text-gray-400 mb-4">
                  <span><%= story.created_at.strftime("%b %d, %Y") %></span>
                  <div class="flex items-center gap-3">
                    <% if story.characters.any? %>
                      <span class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                        </svg>
                        <%= story.characters.count %>
                      </span>
                    <% end %>
                    <% if story.beats.any? %>
                      <span class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.293l-3-3a1 1 0 00-1.414 1.414L10.586 9.5H7a1 1 0 100 2h3.586l-1.293 1.293a1 1 0 101.414 1.414l3-3a1 1 0 000-1.414z" clip-rule="evenodd"/>
                        </svg>
                        <%= story.beats.count %>
                      </span>
                    <% end %>
                  </div>
                </div>

                <div class="flex gap-2">
                  <%= link_to "View", story, class: "flex-1 text-center py-2 bg-purple-600/80 text-white text-sm rounded-lg hover:bg-purple-600 transition-colors" %>
                  <%= link_to "Edit", edit_story_path(story), class: "flex-1 text-center py-2 bg-white/10 text-white text-sm rounded-lg hover:bg-white/20 transition-colors" %>
                </div>
              </div>
            <% end %>
          </div>

          <% if current_user.stories.count > 6 %>
            <div class="text-center mt-12">
              <%= link_to stories_path, class: "inline-flex items-center px-6 py-3 bg-white/10 backdrop-blur-sm text-white rounded-xl hover:bg-white/20 transition-all duration-200" do %>
                View All <%= pluralize(current_user.stories.count, 'Story') %>
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <div class="text-center">
            <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-12 max-w-md mx-auto">
              <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-blue-500 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-white mb-4">No stories yet</h3>
              <p class="text-gray-300 mb-6">Ready to create your first cinematic masterpiece?</p>
              <%= link_to new_story_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-600 to-blue-600 text-white font-semibold rounded-xl hover:from-purple-700 hover:to-blue-700 transition-all duration-200" do %>
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                Create Your First Story
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <!-- Features Section for non-logged users -->
    <div class="relative bg-black/20 backdrop-blur-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-white mb-4">How It Works</h2>
          <p class="text-gray-300 text-lg max-w-2xl mx-auto">Transform simple ideas into detailed cinematic narratives in just a few steps</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
          <div class="text-center">
            <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-pink-500 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-4">1. Write Your Prompt</h3>
            <p class="text-gray-300">Simply describe your story idea in a few words. "A brave knight saves a dragon" or "Robot discovers emotions"</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-teal-500 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-4">2. AI Expands It</h3>
            <p class="text-gray-300">Our AI creates detailed character definitions, locations, and 4 cinematic story beats with consistent descriptions</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-gradient-to-br from-teal-500 to-green-500 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2m-9 4v10a2 2 0 002 2h6a2 2 0 002-2V8M7 8h10M9 12h6"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-4">3. Edit & Export</h3>
            <p class="text-gray-300">Fine-tune characters, locations, and beats. Export your cinematic story structure for video production</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<style>
  @keyframes pulse {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.8; }
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>